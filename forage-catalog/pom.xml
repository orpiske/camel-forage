    <build>
        <plugins>
            <!-- Forage Maven Catalog Plugin -->
            <plugin>
                <groupId>io.kaoto.forage</groupId>
                <artifactId>forage-maven-catalog-plugin</artifactId>
                <version>${project.version}</version>
                <configuration>
                    <outputDirectory>${project.build.directory}/generated-catalog</outputDirectory>
                    <format>all</format>
                </configuration>
                <executions>
                    <execution>
                        <id>generate-catalog</id>
                        <goals>
                            <goal>generate-catalog</goal>
                        </goals>
                        <phase>process-classes</phase>
                    </execution>
                </executions>
            </plugin>

            <!-- JSON Schema Generator Plugin -->
            <plugin>
                <groupId>com.github.victools</groupId>
                <artifactId>jsonschema-maven-plugin</artifactId>
                <version>${jsonschema-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>generate-schema</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <classNames>
                                <className>io.kaoto.forage.catalog.model.ForageCatalog</className>
                            </classNames>
                            <schemaFileName>forage-catalog.schema.json</schemaFileName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-configuration-schema</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <classNames>
                                <className>io.kaoto.forage.catalog.model.ForageConfigurationCatalog</className>
                            </classNames>
                            <schemaFileName>forage-configuration-catalog.schema.json</schemaFileName>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <classpath>WITH_COMPILE_DEPENDENCIES</classpath>
                    <schemaFilePath>${project.build.directory}/generated-catalog</schemaFilePath>
                    <schemaVersion>DRAFT_2020_12</schemaVersion>
                    <options>
                        <preset>PLAIN_JSON</preset>
                        <enabled>
                            <option>DEFINITIONS_FOR_ALL_OBJECTS</option>
                            <option>EXTRA_OPEN_API_FORMAT_VALUES</option>
                        </enabled>
                    </options>
                    <modules>
                        <module>
                            <name>Jackson</name>
                            <options>
                                <option>RESPECT_JSONPROPERTY_ORDER</option>
                                <option>RESPECT_JSONPROPERTY_REQUIRED</option>
                            </options>
                        </module>
                    </modules>
                </configuration>
            </plugin>

            <!-- Copy generated catalog files to resources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven-resources-plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-catalog-to-resources</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/catalog</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/generated-catalog</directory>
                                    <includes>
                                        <include>**/*</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Attach catalog files as additional artifacts -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>${build-helper-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>attach-catalog-json</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>${project.build.directory}/generated-catalog/forage-catalog.json</file>
                                    <type>json</type>
                                    <classifier>catalog</classifier>
                                </artifact>
                                <artifact>
                                    <file>${project.build.directory}/generated-catalog/forage-configuration-catalog.json</file>
                                    <type>json</type>
                                    <classifier>configuration-catalog</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

